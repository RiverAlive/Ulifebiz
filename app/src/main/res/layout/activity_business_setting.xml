<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/app_title"/>
        <com.butao.ulifebiz.view.RYScrollview
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/bg_shape"/>

                <LinearLayout
                    android:id="@+id/ll_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="营业状态 Business status"
                        android:textColor="@color/font_main"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/third_font_size"/>
                    <TextView
                        android:id="@+id/txt_bstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正在营业"
                        android:textColor="@color/font_blue"
                        android:textSize="@dimen/forth_font_size"
                        android:drawableRight="@mipmap/img_right"
                        android:padding="10dp"
                        android:drawablePadding="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_btime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:background="@color/white"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营业时间 Business Hours"
                        android:textColor="@color/font_main"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/third_font_size"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:gravity="right"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">
                        <TextView
                            android:id="@+id/txt_bTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:00-12:00"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textColor="@color/font_content_50"
                            android:textSize="@dimen/forth_font_size"
                            android:drawableRight="@mipmap/img_right"
                            android:drawablePadding="10dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_receipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:background="@color/white"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="自动接单 Automatic receipt"
                        android:textColor="@color/font_main"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/third_font_size"/>
                    <TextView
                        android:id="@+id/txt_receipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自能接单小助手,点击体验"
                        android:textColor="@color/font_content_50"
                        android:textSize="@dimen/forth_font_size"
                        android:drawableRight="@mipmap/img_right"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:drawablePadding="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="非营业时间接受预约单\nNon operating time to receive a reservation form"
                        android:textColor="@color/font_main"
                        android:padding="10dp"
                        android:textSize="@dimen/third_font_size"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_favor_tab"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_undefined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="接 单"
                            android:layout_margin="1dp"
                            android:singleLine="true"
                            android:minEms="4"
                            android:background="@drawable/shape_left_event_true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/third_font_size" />
                        <TextView
                            android:id="@+id/txt_defined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="自定义"
                            android:minEms="3"
                            android:layout_margin="1dp"
                            android:singleLine="true"
                            android:background="@drawable/shape_right_event"
                            android:textColor="@color/login_mian"
                            android:textSize="@dimen/third_font_size" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_boxfee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:background="@color/white"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="餐盒费 Lunch box fee"
                        android:textColor="@color/font_main"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/third_font_size"/>
                    <TextView
                        android:id="@+id/txt_bprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5£"
                        android:textColor="@color/font_content_50"
                        android:textSize="@dimen/four_font_size"
                        android:drawableRight="@mipmap/img_right"
                        android:padding="10dp"
                        android:drawablePadding="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_timesetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:background="@color/white"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="时间设置 Time setting"
                        android:textColor="@color/font_main"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/third_font_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/font_content_50"
                        android:textSize="@dimen/forth_font_size"
                        android:drawableRight="@mipmap/img_right"
                        android:padding="10dp"
                        android:drawablePadding="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:background="@color/white"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="外卖电话 Takeout phone"
                        android:textColor="@color/font_main"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/third_font_size"/>
                    <TextView
                        android:id="@+id/txt_bphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15857889656"
                        android:textColor="@color/font_content_50"
                        android:textSize="@dimen/forth_font_size"
                        android:drawableRight="@mipmap/img_right"
                        android:padding="10dp"
                        android:drawablePadding="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </com.butao.ulifebiz.view.RYScrollview>
    </LinearLayout>
</LinearLayout>