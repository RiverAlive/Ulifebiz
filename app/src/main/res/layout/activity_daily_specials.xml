<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rys_view"
        android:orientation="vertical">
        <include
            layout="@layout/app_title"/>
        <com.butao.ulifebiz.view.RYScrollview
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/bg_shape"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                    android:id="@+id/ll_startDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/huodong_start"
                        android:text="活动开始"
                        android:padding="5dp"
                        android:textColor="@color/font_content"
                        android:textSize="@dimen/third_font_size"
                        android:drawablePadding="5dp"
                        />
                    <TextView
                        android:id="@+id/txt_startDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017-12-12"
                        android:padding="5dp"
                        android:textColor="@color/login_mian"
                        android:textSize="@dimen/second_font_size"
                        />
                </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_stopDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/huodong_end"
                            android:text="活动结束"
                            android:padding="5dp"
                            android:textColor="@color/font_content"
                            android:textSize="@dimen/third_font_size"
                            android:drawablePadding="5dp"
                            />
                        <TextView
                            android:id="@+id/txt_stopDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2017-12-18"
                            android:padding="5dp"
                            android:textColor="@color/login_mian"
                            android:textSize="@dimen/second_font_size"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_longtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_app"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="@dimen/four_font_size"
                    android:textColor="@color/font_content"
                    android:padding="5dp"
                    android:text="合计30天，最长周期90天"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="活动时段 Active period"
                            android:textColor="@color/font_main"
                            android:padding="10dp"
                            android:textSize="@dimen/second_font_size"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/bg_favor_tab"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_undefined"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="同接单时段"
                                android:layout_margin="1dp"
                                android:singleLine="true"
                                android:minEms="5"
                                android:background="@drawable/shape_left_event_true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/second_font_size" />
                            <TextView
                                android:id="@+id/txt_defined"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="自定义"
                                android:minEms="5"
                                android:layout_margin="1dp"
                                android:singleLine="true"
                                android:background="@drawable/shape_right_event"
                                android:textColor="@color/login_mian"
                                android:textSize="@dimen/second_font_size" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_startTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/login_mian"
                            android:padding="5dp"
                            android:textSize="@dimen/third_font_size"
                            android:text="开始时间：08：00"/>
                        <TextView
                            android:id="@+id/txt_endTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/login_mian"
                            android:padding="5dp"
                            android:textSize="@dimen/third_font_size"
                            android:text="结束时间：08：00"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_productNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_app"
                    android:padding="5dp"
                    android:textSize="@dimen/four_font_size"
                    android:textColor="@color/font_content"
                    android:text="特价商品(可添加10，已添加0)"/>
                <LinearLayout
                    android:id="@+id/ll_addware"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/login_mian"
                        android:textSize="@dimen/title_font_size"
                        android:text="+"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/login_mian"
                        android:textSize="@dimen/third_font_size"
                        android:text="添加商品"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/bg_app"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="beforeDescendants"
                        android:fastScrollEnabled="false">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/ry_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/bg_app"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="活动描述 Activity description"
                        android:textColor="@color/font_main"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/third_font_size"/>
                    <EditText
                        android:id="@+id/edt_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="4"
                        android:gravity="left|top"
                        android:hint="请描述活动的内容及规则"
                        android:padding="5dp"
                        android:textSize="@dimen/third_font_size"
                        android:textColor="@color/font_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_edt_message"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/bg_app"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="起送价规则 Start price rule"
                        android:textColor="@color/font_main"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/third_font_size"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_favor_tab"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="按优惠价计"
                            android:layout_margin="1dp"
                            android:singleLine="true"
                            android:minEms="5"
                            android:background="@drawable/shape_left_event_true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/third_font_size" />
                        <TextView
                            android:id="@+id/txt_undiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="按原价计"
                            android:minEms="5"
                            android:layout_margin="1dp"
                            android:singleLine="true"
                            android:background="@drawable/shape_right_event"
                            android:textColor="@color/login_mian"
                            android:textSize="@dimen/third_font_size" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/bg_app"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="其他优惠 Other offers"
                        android:textColor="@color/font_main"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/third_font_size"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_favor_tab"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="   同     享   "
                            android:layout_margin="1dp"
                            android:singleLine="true"
                            android:minEms="5"
                            android:background="@drawable/shape_left_event_true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/third_font_size" />
                        <TextView
                            android:id="@+id/txt_unshare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=" 不同享 "
                            android:minEms="5"
                            android:layout_margin="1dp"
                            android:singleLine="true"
                            android:background="@drawable/shape_right_event"
                            android:textColor="@color/login_mian"
                            android:textSize="@dimen/third_font_size" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_app"
                    android:padding="5dp"
                    android:textSize="@dimen/four_font_size"
                    android:textColor="@color/font_content"
                    android:text="此设置不包扩天天特价活动，本活动购买设置，见高级设置"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="高级配置  Advanced configuration"
                        android:textColor="@color/login_mian"
                        android:singleLine="true"
                        android:textSize="@dimen/third_font_size"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="用户每天可定一单，每单最多购买特价商品1件，单件活动商品可购买1件"
                        android:textColor="@color/font_main"
                        android:singleLine="true"
                        android:textSize="@dimen/forth_font_size"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/bg_app"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="我已阅读并同意"
                        android:textSize="@dimen/third_font_size"
                        android:textColor="@color/font_main"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="《商家自主营销协议》"
                        android:textSize="@dimen/forth_font_size"
                        android:textColor="@color/login_mian"/>
                    <CheckBox
                        android:id="@+id/cb_deal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:checked="true"
                        style="@style/CheckDealTheme"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/bg_app"/>
            </LinearLayout>
        </com.butao.ulifebiz.view.RYScrollview>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rys_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@color/login_mian"
            android:text="发      布"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>
</RelativeLayout>