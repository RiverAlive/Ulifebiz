<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@mipmap/img_left"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_favor_tab"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_in_built"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="已建活动"
                android:layout_margin="1dp"
                android:singleLine="true"
                android:background="@drawable/shape_left_event_true"
                android:textColor="@color/white"
                android:textSize="@dimen/second_font_size" />
            <TextView
                android:id="@+id/txt_new_built"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="新建活动"
                android:layout_margin="1dp"
                android:singleLine="true"
                android:background="@drawable/shape_right_event"
                android:textColor="@color/login_mian"
                android:textSize="@dimen/second_font_size" />
        </LinearLayout>
    </RelativeLayout>
    <com.butao.ulifebiz.view.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        ></com.butao.ulifebiz.view.NoScrollViewPager>
</LinearLayout>