<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_btn"
        android:orientation="vertical"
        android:background="@color/white">
        <include
            layout="@layout/app_title"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/bg_shape"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_startDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="6dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/huodong_start"
                    android:text="活动开始"
                    android:padding="5dp"
                    android:textColor="@color/font_content"
                    android:textSize="@dimen/third_font_size"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:id="@+id/txt_startDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-12-12"
                    android:padding="5dp"
                    android:textColor="@color/login_mian"
                    android:textSize="@dimen/second_font_size"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_stopDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/huodong_end"
                    android:text="活动结束"
                    android:padding="5dp"
                    android:textColor="@color/font_content"
                    android:textSize="@dimen/third_font_size"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:id="@+id/txt_stopDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-12-18"
                    android:padding="5dp"
                    android:textColor="@color/login_mian"
                    android:textSize="@dimen/second_font_size"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_app"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="活动时段 Active period"
                    android:textColor="@color/font_main"
                    android:padding="10dp"
                    android:textSize="@dimen/second_font_size"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_favor_tab"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_undefined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="同接单时段"
                        android:layout_margin="1dp"
                        android:singleLine="true"
                        android:minEms="5"
                        android:background="@drawable/shape_left_event_true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/second_font_size" />
                    <TextView
                        android:id="@+id/txt_defined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="自定义"
                        android:minEms="5"
                        android:layout_margin="1dp"
                        android:singleLine="true"
                        android:background="@drawable/shape_right_event"
                        android:textColor="@color/login_mian"
                        android:textSize="@dimen/second_font_size" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_startTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/login_mian"
                    android:padding="5dp"
                    android:textSize="@dimen/third_font_size"
                    android:text="开始时间：08：00"/>
                <TextView
                    android:id="@+id/txt_endTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/login_mian"
                    android:padding="5dp"
                    android:textSize="@dimen/third_font_size"
                    android:text="结束时间：08：00"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_app"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="满减规则 Full cut rule"
                    android:textColor="@color/font_main"
                    android:padding="10dp"
                    android:textSize="@dimen/second_font_size"/>
                <TextView
                    android:id="@+id/txt_addPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加新满减"
                    android:textColor="@color/login_mian"
                    android:padding="10dp"
                    android:textSize="@dimen/third_font_size"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="beforeDescendants"
                android:fastScrollEnabled="false">
                <android.support.v7.widget.RecyclerView
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/ry_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_btn"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:checked="true"
                style="@style/CheckFullDownTheme"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="已阅读并同意"
                android:textColor="@color/font_content"
                android:textSize="@dimen/second_font_size" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="《商家自主营销协议》"
                android:textColor="@color/font_main"
                android:textSize="@dimen/second_font_size" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/bg_btn"
            android:text="创建活动"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>
</RelativeLayout>