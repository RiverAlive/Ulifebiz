<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_title" />

    <TextView
        android:id="@+id/txt_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/font_blue"
        android:gravity="center"
        android:padding="10dp"
        android:text="正常营业"
        android:textColor="@color/white"
        android:textSize="@dimen/second_font_size" />
    <TextView
        android:id="@+id/txt_rest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/login_mian"
        android:gravity="center"
        android:padding="10dp"
        android:text="休息中"
        android:textColor="@color/white"
        android:textSize="@dimen/second_font_size" />
    <TextView
        android:id="@+id/txt_suspend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/auxiliary_font"
        android:gravity="center"
        android:padding="10dp"
        android:text="暂停营业"
        android:textColor="@color/white"
        android:textSize="@dimen/second_font_size" />


</LinearLayout>