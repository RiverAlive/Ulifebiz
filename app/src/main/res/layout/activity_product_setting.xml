<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include
        layout="@layout/app_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/login_mian"
        android:background="#fdfc84"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="菜品图片请使用清晰图片"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/dpmj_bg"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_setting"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:descendantFocusability="beforeDescendants"
                android:fastScrollEnabled="false">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ry_class"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/line_f1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:descendantFocusability="beforeDescendants"
                android:fastScrollEnabled="false">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ry_wares"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/login_mian">
            <TextView
                android:id="@+id/txt_pclass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:text="管理分类"
                android:drawableRight="@mipmap/img_shang"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="10dp"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/txt_psetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="管理商品"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>