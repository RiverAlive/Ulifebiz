<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include
        layout="@layout/app_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_status"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/login_mian"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_storename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textSize="@dimen/second_font_size"
                        android:textColor="@color/white"
                        android:text="锐和科技"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:src="@mipmap/xiaoxingxing"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_store"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_price_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/third_font_size"
                            android:text="起送100£ 配送4£"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_jian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:drawablePadding="5dp"
                                android:textColor="@color/white"
                                android:drawableLeft="@mipmap/jian"
                                android:textSize="@dimen/four_font_size"
                                android:text="首次减免"/>
                            <TextView
                                android:id="@+id/txt_new"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:drawablePadding="5dp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/white"
                                android:drawableLeft="@mipmap/p_new"
                                android:textSize="@dimen/four_font_size"
                                android:text="首次减免"/>
                            <TextView
                                android:id="@+id/txt_te"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:drawablePadding="5dp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/white"
                                android:drawableLeft="@mipmap/te"
                                android:textSize="@dimen/four_font_size"
                                android:text="首次减免"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_app"
                app:tabIndicatorColor="@color/login_mian"
                app:tabBackground="@color/bg_app"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/login_mian"
                ></android.support.design.widget.TabLayout>
            <com.butao.ulifebiz.view.NoScrollViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                ></com.butao.ulifebiz.view.NoScrollViewPager>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/ll_status"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <RelativeLayout
                android:id="@+id/ll_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/login_mian"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="@dimen/second_font_size"
                    android:text="正在营业\nIt's open now"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_open"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="-25dp">
                <ImageView
                    android:id="@+id/img_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>