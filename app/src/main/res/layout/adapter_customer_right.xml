<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_app"
        android:paddingRight="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_reviewer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/head_person"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_reviewerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="用户13456"
                    android:layout_weight="1"
                    android:textColor="@color/font_main"
                    android:textSize="@dimen/third_font_size"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/txt_reviewerTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/font_content_50"
                    android:textSize="@dimen/third_font_size"
                    android:padding="5dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_reviewerremark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户13456"
                android:textColor="@color/font_content_50"
                android:textSize="@dimen/third_font_size"
                android:paddingLeft="5dp"/>
            <TextView
                android:id="@+id/txt_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回 复"
                android:visibility="gone"
                android:layout_gravity="right"
                android:gravity="center"
                android:background="@drawable/bg_chagepwd_button"
                android:textColor="@color/white"
                android:minEms="4"
                android:textSize="@dimen/third_font_size"
                android:padding="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>