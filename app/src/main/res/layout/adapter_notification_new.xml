<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="top|center"
            android:gravity="top"
            android:src="@mipmap/tongzhi"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/second_font_size"
                    android:textColor="@color/font_main"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center"
                    android:text="系统通知"/>
                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/third_font_size"
                    android:textColor="@color/font_content_50"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center"
                    android:text="2017.8.1"/>
            </LinearLayout>
            <com.butao.ulifebiz.view.ExpandableTextView
                android:id="@+id/etv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:animDuration="200"
                app:collapseDrawable="@mipmap/tongzhi_jiantou"
                app:collapseExpandGrarity="right"
                app:collapseExpandTextColor="@color/font_content_50"
                app:contentTextColor="@color/font_content_50"
                app:contentTextSize="14sp"
                app:expandDrawable="@mipmap/zuotongzhi"
                app:maxCollapsedLines="1"
                app:textCollapse="@string/test_content"
                app:textExpand="@string/expand" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_app"/>
</LinearLayout>