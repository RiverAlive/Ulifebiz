<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_orderNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="单号："
            android:textColor="@color/font_main"
            android:padding="5dp"
            android:textSize="@dimen/four_font_size"/>
        <TextView
            android:id="@+id/txt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="单号："
            android:gravity="center"
            android:textColor="@color/font_main"
            android:padding="5dp"
            android:textSize="@dimen/four_font_size"/>
        <TextView
            android:id="@+id/txt_orderInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="详情"
            android:textColor="@color/login_mian"
            android:padding="5dp"
            android:textSize="@dimen/third_font_size"/>
    </LinearLayout>
    <include
        layout="@layout/adapter_order_child"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_app"/>
</LinearLayout>