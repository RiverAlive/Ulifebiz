<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp">
    <LinearLayout
        android:id="@+id/ll_ware"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_ware"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@mipmap/head_person"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_warename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="用户13456"
                android:textColor="@color/font_main2"
                android:textSize="@dimen/third_font_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月销售700"
                    android:textColor="@color/font_main2"
                    android:textSize="@dimen/four_font_size"
                    android:singleLine="true"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/txt_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存150"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/font_main2"
                    android:textSize="@dimen/four_font_size"
                    android:singleLine="true"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_stoptime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="非可售时间"
                android:layout_weight="1"
                android:textColor="@color/font_content_50"
                android:textSize="@dimen/four_font_size"
                android:drawableLeft="@mipmap/tingcan_time"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="£5"
            android:textColor="@color/font_main2"
            android:textSize="@dimen/common_font_size" />

        <TextView
            android:id="@+id/txt_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_product_delete"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="删除"
            android:textColor="@color/login_text"
            android:textSize="@dimen/third_font_size" />
        <TextView
            android:id="@+id/txt_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_product_stop"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:text="编辑"
            android:textColor="@color/login_mian"
            android:textSize="@dimen/third_font_size" />
        <TextView
            android:id="@+id/txt_stopsale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_product_stop"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="停售"
            android:textColor="@color/login_mian"
            android:textSize="@dimen/third_font_size" />
    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_f1"/>
</LinearLayout>