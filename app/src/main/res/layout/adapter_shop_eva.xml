<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_eva"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/head_person"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_evaName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="用户13456"
                    android:layout_weight="1"
                    android:textColor="@color/font_main"
                    android:textSize="@dimen/third_font_size"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/txt_evaZan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/zan"
                    android:textColor="@color/login_mian"
                    android:textSize="@dimen/third_font_size"
                    android:visibility="gone"
                    android:padding="5dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_evaContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户13456"
                android:textColor="@color/font_content_50"
                android:textSize="@dimen/third_font_size"
                android:singleLine="true"
                android:paddingLeft="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">
                    <com.butao.ulifebiz.view.StarBarView
                        android:id="@+id/star_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        ratingbar:starEmpty="@mipmap/star_empty"
                        ratingbar:starFill="@mipmap/star_full"
                        ratingbar:starDistance="5dp"
                        ratingbar:starCount="5"
                        android:layout_marginLeft="5dp"
                        ratingbar:starSize="15dp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="4branch"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textColor="@color/login_mian"
                    android:textSize="@dimen/third_font_size"/>
                <TextView
                    android:id="@+id/txt_evaTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-12-12"
                    android:textColor="@color/font_content_50"
                    android:textSize="@dimen/third_font_size"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_app"/>
</LinearLayout>