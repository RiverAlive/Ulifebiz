<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppBTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:listDivider">@drawable/divider_bg</item>
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>
    <style name="AppBaseTheme" parent="android:Theme.Translucent.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="back_dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--recyclerview下拉刷新-->
    <declare-styleable name="SwipyRefreshLayout">
        <attr name="direction">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="both" value="2" />
        </attr>
    </declare-styleable>


    <!--底部导航-->
    <style name="CustomTab" parent="Widget.Design.TabLayout" >
        <item name="tabIndicatorColor">@color/login_line</item>
        <item name="tabTextColor">@color/login_mian</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabBackground">@drawable/bg_main_tab</item>
        <item name="tabIndicatorHeight">0.5dp</item>
    </style>

    <!--底部导航-->
    <style name="Orderremind" parent="Widget.Design.TabLayout" >
        <item name="tabIndicatorColor">@color/login_line</item>
        <item name="tabTextColor">@color/login_mian</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabBackground">@drawable/bg_main_tab</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>
    <!--订单主页导航-->
    <style name="OrderStatus" parent="Widget.Design.TabLayout" >
        <item name="tabIndicatorColor">@color/login_line</item>
        <item name="tabTextColor">@color/login_mian</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabBackground">@color/login_mian</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>
    <!-- 单选多选-->
    <style name="CheckDealTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/select_deal</item>
    </style>
    <!-- 单选多选-->
    <style name="CheckFullDownTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/select_full_down</item>
    </style>
    <!-- 单选多选-->
    <style name="CheckOnlineHelpTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/select_online_help</item>
    </style>

    <!--swtich-->
    <style name="SwitchButtonMD">
        <item name="kswThumbDrawable">@drawable/ksw_md_thumb</item>
        <item name="kswBackColor">@color/ksw_md_back_color</item>
        <item name="kswBackMeasureRatio">1.45</item>
        <item name="kswThumbMarginLeft">-16dp</item>
        <item name="kswThumbMarginTop">-14dp</item>
        <item name="kswThumbMarginRight">-16dp</item>
        <item name="kswThumbMarginBottom">-14dp</item>
        <item name="kswThumbWidth">@dimen/ksw_md_thumb_ripple_size</item>
        <item name="kswThumbHeight">@dimen/ksw_md_thumb_ripple_size</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>


</resources>
